<div class = "row">
  <div class ="col-md-4">
    <% if @users.any? %>
      <h3>Followers (<%= @users.count %>)</h3>
      <div class = "col-md-8">
        <% @users.each do |user| %>
        <ol class = "micropost">
          <%= link_to gravatar_for(user, size:18), user %>
          <span><%= link_to user.name, user %></span>
        </ol>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
